@using ProjectData.Models
@model IEnumerable<ProjectData.Models.City>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<p>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Return to tables</a>
</p>
<table class="table">
    <thead>
        <tr>
            @if ((bool)ViewData["isReadable"] == false)
            {
                <th>
                    @Html.DisplayNameFor(model => model.country_id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.region_id)
                </th>
                <th>
                    <a asp-action="Index" asp-route-isReadable="false" asp-route-sortOrder="@ViewBag.NameSort">
                        Name
                    </a>
                </th>
            }
            else
            {
                <th>
                    Country
                </th>
                <th>
                    Region
                </th>
                <th>
                    <a asp-action="Index" asp-route-isReadable="true" asp-route-sortOrder="@ViewBag.NameSort">
                        Name
                    </a>
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @if ((bool)ViewData["isReadable"] == false)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.country_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.region_id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.city_id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.city_id">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            @foreach (var item in ViewData["Res"] as List<FullCity>)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Region)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.city_id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.city_id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
